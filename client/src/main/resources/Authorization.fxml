<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:id="authVBox" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.grigorev.client.AuthController"
      prefHeight="400.0" prefWidth="600.0" alignment="CENTER">
    <Label fx:id="label" maxWidth="200" text="Please sign in or sign up!" alignment="CENTER">
        <VBox.margin>
            <Insets bottom="10.0"/>
        </VBox.margin>
    </Label>
    <TextField fx:id="login" maxWidth="200" promptText="Login">
        <VBox.margin>
            <Insets bottom="10.0"/>
        </VBox.margin>
    </TextField>
    <PasswordField fx:id="password" maxWidth="200" promptText="Password">
        <VBox.margin>
            <Insets bottom="10.0"/>
        </VBox.margin>
    </PasswordField>
    <HBox alignment="CENTER">
        <Button onAction="#signIn" prefWidth="80" text="Sign In" defaultButton="true">
            <HBox.margin>
                <Insets right="20.0"/>
            </HBox.margin>
        </Button>
        <Button onAction="#signUp" prefWidth="80" text="Sign Up"/>
    </HBox>
</VBox>
